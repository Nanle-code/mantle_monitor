# =============================================================================
# Mantle Indexer Database
# =============================================================================
DATABASE_URL=postgresql://mantle_user:1920@localhost/mantle_indexer

# =============================================================================
# Mantle Blockchain Configuration
# =============================================================================
# Mantle Mainnet
MANTLE_HTTPS_RPC=https://api.zan.top/node/v1/mantle/mainnet/01b29a11dbb7467c8a122c6c569a5620
MANTLE_WSS_RPC=wss://api.zan.top/node/ws/v1/mantle/mainnet/01b29a11dbb7467c8a122c6c569a5620


# Chain Info
CHAIN_ID=5000
CHAIN_NAME=Mantle

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=3000

# =============================================================================
# Indexer Configuration
# =============================================================================
START_BLOCK=0
BATCH_SIZE=100
CONFIRMATIONS_REQUIRED=12
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# Alert Configuration
# =============================================================================
ALERT_LARGE_TX_THRESHOLD=10000.0
ALERT_FAILED_TX_ENABLED=true
ALERT_ANOMALY_DETECTION=true

# Email Alerts
ALERT_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@example.com

# Telegram Alerts
ALERT_TELEGRAM_ENABLED=false
TELOXIDE_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# =============================================================================
# Logging Configuration
# =============================================================================
RUST_LOG=info,mantle_indexer=debug